<UserControl x:Class="WpfClock.Views.ClockPage2"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:local="clr-namespace:WpfClock.Views"
	  xmlns:controls="clr-namespace:WpfClock.Controls"
	  mc:Ignorable="d" 
	  d:DesignHeight="450" d:DesignWidth="800"
	  >

	<UniformGrid>
		<controls:Clock Background="Orange" Foreground="Black" BorderThickness="2" BorderBrush="Red" CurrentDateTime="{Binding TimeProvider.CurrentDateTime}"/>
		<controls:Clock Background="Orange" Foreground="Black" BorderThickness="2" BorderBrush="Red" CurrentDateTime="{Binding TimeProvider.CurrentDateTime}"/>
		<controls:Clock Background="Orange" Foreground="Black" BorderThickness="2" BorderBrush="Red" CurrentDateTime="{Binding TimeProvider.CurrentDateTime}"/>
		<controls:Clock Background="Orange" Foreground="Black" BorderThickness="2" BorderBrush="Red" CurrentDateTime="{Binding TimeProvider.CurrentDateTime}"/>
	</UniformGrid>
</UserControl>
